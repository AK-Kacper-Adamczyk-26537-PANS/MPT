<!-- res/drawable/custom_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Stan naciśnięcia przycisku -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonBorder"/> <!-- Możesz ustawić inny kolor dla stanu naciśnięcia -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Domyślny stan przycisku -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonBackground"/>
            <stroke android:width="2dp" android:color="@color/buttonBorder"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>

