<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Zaokrąglone rogi -->
    <corners android:radius="5dp" />

    <!-- Obramowanie -->
    <stroke
        android:width="1dp"
        android:color="@color/editTextBorderColor" /> <!-- Kolor obramowania (np. czerwony) -->

    <!-- Wewnętrzne wypełnienie -->
    <solid android:color="@color/editTextBackgroundColor" /> <!-- Wewnętrzny kolor pola (np. biały) -->

    <!-- Wewnętrzny margines (opcjonalnie) -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />
</shape>
