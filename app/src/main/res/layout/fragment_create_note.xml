<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_create_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_marginVertical="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tytuł Notatki -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/background_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_task_title"
                    card_view:tint="@color/teal_200"
                    android:contentDescription="Ikona tytułu notatki" />

                <EditText
                    android:id="@+id/editTextNoteTitle"
                    style="@style/TaskTitleStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Tytuł Notatki"
                    android:inputType="textPersonName"
                    android:background="@color/editTextBackgroundColor"
                    android:textColor="@color/editTextColor"
                    android:paddingStart="16dp"
                    android:paddingVertical="5dp"
                    android:layout_marginStart="16dp" /> <!-- Dodany odstęp między ikoną a tekstem -->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Opis Notatki -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/background_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_description"
                    card_view:tint="@color/teal_200"
                    android:contentDescription="Ikona opisu notatki" />

                <EditText
                    android:id="@+id/editTextNoteDescription"
                    style="@style/TaskDescriptionStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Opis Notatki"
                    android:inputType="textMultiLine"
                    android:minLines="1"
                    android:gravity="top"
                    android:background="@color/editTextBackgroundColor"
                    android:textColor="@color/editTextColor"
                    android:paddingStart="16dp"
                    android:paddingVertical="5dp"
                    android:layout_marginStart="16dp" /> <!-- Dodany odstęp między ikoną a tekstem -->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Link Google Drive -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/background_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_drive"
                    card_view:tint="@color/teal_200"
                    android:contentDescription="Ikona Google Drive" />

                <EditText
                    android:id="@+id/editTextGoogleDriveLink"
                    style="@style/TaskLabelStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Link Google Drive"
                    android:inputType="textUri"
                    android:background="@color/editTextBackgroundColor"
                    android:textColor="@color/editTextColor"
                    android:paddingStart="16dp"
                    android:paddingVertical="5dp"
                    android:layout_marginStart="16dp" /> <!-- Dodany odstęp między ikoną a tekstem -->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Data Notatki -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/background_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    card_view:tint="@color/teal_200"
                    android:contentDescription="Ikona daty notatki" />

                <TextView
                    android:id="@+id/textViewNoteDate"
                    style="@style/TaskLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data:"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttonSelectNoteDate"
            style="@style/TaskButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wybierz Datę"
            android:layout_marginTop="8dp" /> <!-- Zwiększony odstęp -->

        <!-- Lista Członków -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/background_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_members"
                    card_view:tint="@color/teal_200"
                    android:contentDescription="Ikona członków" />

                <TextView
                    android:id="@+id/textViewMembers"
                    style="@style/TaskLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wybierz Członków"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNoteMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="vertical" />

        <!-- Przycisk Tworzenia Notatki -->
        <Button
            android:id="@+id/buttonCreateNote"
            style="@style/TaskButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Utwórz Notatkę"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="30dp" />
    </LinearLayout>
</ScrollView>
