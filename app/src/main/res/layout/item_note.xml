<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="12dp"
    android:layout_margin="8dp"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tytuł Notatki z Ikoną -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_description"
            card_view:tint="@color/teal_200"
            android:contentDescription="Ikona notatki"
            android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textViewNoteTitle"
                style="@style/TaskTitleStyle"
                android:text="Tytuł Notatki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Data Notatki z Ikoną -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:paddingLeft="4dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_calendar"
                card_view:tint="@color/teal_200"
                android:contentDescription="Ikona daty"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textViewNoteDate"
                style="@style/TaskLabelStyle"
                android:text="Data: 01/01/2024"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

