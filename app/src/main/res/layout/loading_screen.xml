<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:gravity="center">

    <ImageView
        android:id="@+id/loading_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/image1" /> <!-- Twoje logo -->

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Åadowanie..."
        android:layout_below="@id/loading_logo"
        android:paddingTop="16dp"
        android:textSize="25sp"
        android:textColor="@color/text_color"
        android:textAlignment="center"/>

    <!-- Dodano pola dla nazwy klubu i opisu -->
    <TextView
        android:id="@+id/loading_club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loading_text"
        android:paddingTop="8dp"
        android:textSize="20sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/loading_club_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loading_club_name"
        android:paddingTop="4dp"
        android:textSize="16sp"
        android:textColor="@android:color/black" />
</RelativeLayout>
