<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Obrazek w prawym górnym rogu -->
    <ImageView
        android:id="@+id/reset_image"
        android:layout_width="wrap_content"
        android:layout_height="178dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitStart"
        android:src="@drawable/rejestracja_kolo" /> <!-- Dodaj tutaj swoje zdjęcie -->

    <!-- Tekst "Resetowanie hasła" na obrazku -->
    <TextView
        android:id="@+id/reset_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Resetowanie\nhasła"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp" />

    <!-- E-mail -->
    <TextView
        android:id="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="E-mail"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_label"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Wprowadź adres e-mail"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_edittext"
    android:padding="10dp" />

    <!-- Przycisk resetowania hasła -->
    <Button
        android:id="@+id/buttonResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmail"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"
        android:text="Zresetuj hasło"
        android:background="@drawable/button"
        android:textColor="@color/buttonText" />

</RelativeLayout>
