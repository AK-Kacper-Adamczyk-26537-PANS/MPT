<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="12dp"
    android:layout_margin="8dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tytuł Zadania -->
        <TextView
            android:id="@+id/textViewTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tytuł zadania"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- Opis Zadania -->
        <TextView
            android:id="@+id/textViewTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opis zadania"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/gray" />

        <!-- Informacje o Zadaniu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Data Rozpoczęcia -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    card_view:tint="@color/teal_200" />

                <TextView
                    android:id="@+id/textViewTaskStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Rozpoczęcie: 01/01/2024"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Data Zakończenia -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    card_view:tint="@color/teal_200" />

                <TextView
                    android:id="@+id/textViewTaskEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Zakończenie: 05/01/2024"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Priorytet -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/prioritize"
                    card_view:tint="@color/teal_200" />

                <TextView
                    android:id="@+id/textViewTaskPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Priorytet: Wysoki"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Postęp -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/progress"
                    card_view:tint="@color/teal_200" />

                <TextView
                    android:id="@+id/textViewTaskProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Postęp: 3/5"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Data Wykonania -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_info"
                card_view:tint="@color/teal_200" />

            <TextView
                android:id="@+id/textViewTaskDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Data wykonania: 06/01/2024"
                android:textSize="14sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
